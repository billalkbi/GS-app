<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/android_lar2" />

    <TextView
        android:id="@+id/create_your"
        android:layout_width="372dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="133dp"
        android:fontFamily="@font/barlow_bold"
        android:gravity="top"
        android:text="FORGOT PASSWORD"
        android:textAppearance="@style/create_your"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="190dp" />

    <TextView
        android:id="@+id/register_fo"
        android:layout_width="333dp"
        android:layout_height="47dp"
        android:fontFamily="@font/bellota_text_bold"

        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="208dp"
        android:layout_marginBottom="-5dp"
        android:gravity="top"
        android:text="please enter your email adress to reset your password"
        android:textAppearance="@style/register_fo" />


    <LinearLayout
        android:id="@+id/buttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="260dp"
        android:gravity="center"
        android:orientation="vertical">




        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:fontFamily="@font/bellota_text_bold"
            android:drawableLeft="@drawable/baseline_alternate_email_24"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="30dp"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="30dp"
            android:padding="20dp"
            android:background="@drawable/rounded_corners_register"
            android:drawablePadding="15dp"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveButton"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="387dp"
        android:layout_marginEnd="222dp"
        android:layout_marginBottom="-102dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/barlow_bold"
        android:text="@string/save"
        android:textColor="@color/white"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelButton"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttn"
        android:fontFamily="@font/barlow_bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="237dp"
        android:layout_marginTop="387dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="-102dp"
        android:background="@drawable/round_button"
        android:text="CANCEL"
        android:backgroundTint="@color/common_google_signin_btn_text_dark"/>


</RelativeLayout>