<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/rectangle_5"
        android:layout_width="match_parent"
        android:layout_height="418dp"
        android:background="@drawable/android_lar4">
        <ImageView
            android:id="@+id/image_7"
            android:layout_width="150dp"
            android:layout_height="91dp"
            android:background="@drawable/geeksquad"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
        />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="123dp"
            android:layout_height="112dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:text="TextView" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        >

        <View
            android:id="@+id/rectangle_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/rectangle_6" />

        <TextView
            android:id="@+id/your_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD AN APPOINTMENT "
            android:fontFamily="@font/barlow_bold"
            android:textSize="28dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"

            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fullNameInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded_corners_register"
            android:drawablePadding="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/bellota_text_bold"
            android:hint="FULLNAME"
            android:paddingLeft="40dp"
            android:textSize="14dp"
            >

        </com.google.android.material.textfield.TextInputEditText>

        <EditText
            android:id="@+id/datePicker"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="235dp"
            android:background="@drawable/rounded_corners_register"
            android:drawablePadding="15dp"
            android:textAlignment="center"
            android:fontFamily="@font/bellota_text_bold"
            android:hint="ENTER DATE"
            android:padding="20dp"
            android:textSize="14dp"

            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerStorePicker"
            android:layout_width="212dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="179dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corners_register"
            android:spinnerMode="dropdown" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/idBtnPickTime"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="235dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_corners_register"
            android:fontFamily="@font/bellota_text_bold"
            android:hint="PICK TIME"
            android:textAllCaps="true" />

        <Spinner
            android:id="@+id/spinnerReasenPicker"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="315dp"
            android:paddingLeft="30dp"
            android:background="@drawable/rounded_corners_register"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="395dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/rounded_corners_register"
            android:fontFamily="@font/bellota_text_bold"
            android:hint="DESCRIPTION"
            android:paddingLeft="20dp"
            android:textSize="14dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveBTN"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="530dp"
            android:background="@drawable/round_button"
            android:text="@string/save"
            android:textAppearance="@style/save" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getBTN"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="530dp"
            android:layout_marginEnd="294dp"
            android:background="@drawable/round_button"
            android:text="GET"
            android:textAppearance="@style/save" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBTN"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="530dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corners_register"
            android:text="CANCEL"
            android:textAppearance="@style/save" />


    </RelativeLayout>









</RelativeLayout>